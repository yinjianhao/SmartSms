<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充色 -->
            <solid android:color="@color/colorBaseBlue" />
            <!--边框颜色,宽度-->
            <stroke android:width="2dp" android:color="@color/colorOrangeRed" />
            <!-- 圆角 -->
            <corners android:radius="6dp"/>
            <!-- 主体背景颜色值,渐变色 -->
            <!--<gradient android:angle="0" android:centerX="0.5" android:centerY="0.5" android:centerColor="@color/colorBaseBlue" android:startColor="#000" android:endColor="#fff" android:type="linear"/>-->
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="6dp" />
            <gradient android:angle="0" android:centerColor="@color/colorDeepBlue" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/colorDeepBlue" android:startColor="@color/colorDeepBlue" />
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp" />
        </shape>
    </item>
</selector>